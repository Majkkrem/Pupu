<Application x:Class="Pupu.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Pupu"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <Style x:Key="fontDesign" TargetType="Window">
            <Setter Property="FontFamily" Value="Fonts/pixelfont.TTF #Pixelfont" />
        </Style>

        <Style TargetType="Window">
            <Setter Property="FontFamily" Value="Fonst/pixelfont.TFF #Pixelfont" />
        </Style>
    </Application.Resources>
</Application>
