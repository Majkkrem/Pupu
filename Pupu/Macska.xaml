<Window x:Class="Pupu.Macska"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Pupu"
        mc:Ignorable="d"
        Title="Macska" Height="450" Width="800">
    <Window.Resources>
        <Style TargetType="Label">
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontFamily" Value="Fonts/Pixelfont.ttf #Common Pixel"/>
        </Style>
        <Style TargetType="Button">
            <Setter Property="FontSize" Value="15"/>
            <Setter Property="FontFamily" Value="Fonts/Pixelfont.ttf #Common Pixel"/>
        </Style>

    </Window.Resources>
    <Grid Margin="7,0,-7,0">
        <Label Content="Health: 100" x:Name="lbl_health" HorizontalAlignment="Left" Margin="70,63,0,0" VerticalAlignment="Top"/>
        <Label Content="Mood: 100" x:Name="lbl_mood" Margin="250,63,414,0" VerticalAlignment="Top"/>
        <Label Content="Energy: 100" x:Name="lbl_energy" Margin="420,63,216,0" VerticalAlignment="Top"/>
        <Label Content="Hunger: 0" x:Name="lbl_hunger" Margin="602,63,54,0" VerticalAlignment="Top"/>
        <Button Content="Sleep" x:Name="sleep_wake" HorizontalAlignment="Left" Margin="456,310,0,0" VerticalAlignment="Top" Click="sleep_wake_Click"/>
        <Button Content="Play" x:Name="btnPlay" Margin="265,310,492,0" VerticalAlignment="Top" Click="play_click"/>
        <Button Content="Scratch" x:Name="btnScratch" HorizontalAlignment="Left" Margin="113,310,0,0" VerticalAlignment="Top" Click="scratch_click"/>
        <Button Content="Eat" x:Name="btneat" HorizontalAlignment="Left" Margin="619,310,0,0" VerticalAlignment="Top" Click="eat_click"/>




    </Grid>
</Window>
